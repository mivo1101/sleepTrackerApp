<%- include('../components/header') %>

<main class="signin-page">
  <div class="signin-left"></div>
  <div class="signin-right">
    <div class="signin-card">
      <div class="signin-logo">Alive</div>
      <p class="signin-welcome">Welcome back!</p>
      <h1 class="signin-title">Sign In</h1>

      <form class="signin-form" action="/auth/login" method="post">
        <input type="email" class="signin-input" placeholder="Email" name="email" required>
        <input type="password" class="signin-input" placeholder="Password" name="password" required>
        <button class="signin-submit" type="submit">Sign In</button>
      </form>

      <p class="signin-foot">Have not had an account? <a class="signin-link" href="#">Register</a> now!</p>
    </div>
  </div>
</main>

<%- include('../components/footer') %>
